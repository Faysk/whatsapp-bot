# .env.example
# Copie este arquivo para .env e preencha os valores conforme necess√°rio.
# Este arquivo N√ÉO deve conter credenciais reais.

########################################
# üåê Banco de Dados PostgreSQL
########################################
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=bot_senha
POSTGRES_DB=whatsapp_bot
DB_HOST=db
DB_PORT=5432
DB_SSLMODE=disable
DB_PATH=postgres://bot_user:bot_senha@db:5432/whatsapp_bot?sslmode=disable&binary_parameters=true
DB_MAX_RETRIES=5
DB_RETRY_INTERVAL=2s
PSQL_TIMEOUT=5s

########################################
# üöÄ Servidor HTTP & Logging
########################################
PORT=8080
LOG_LEVEL=INFO            # DEBUG | INFO | WARN | ERROR
LOG_FORMAT=text           # text | json
TZ=America/Sao_Paulo
HTTP_HEALTH_ENDPOINT=/health

########################################
# ü§ñ Integra√ß√£o com OpenAI
########################################
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT=30s

########################################
# ‚öôÔ∏è Configura√ß√£o do Bot
########################################
BOT_NAME=FayskBot
LANG=pt-BR
AUTHORIZED_NUMBERS=5511999999999
RESTRICT_TO_GROUP=false

########################################
# ‚úâÔ∏è Limites de Mensagem
########################################
MAX_TOKENS=4000
TEMPERATURE=0.7

########################################
# üóûÔ∏è Agendador de Not√≠cias Cripto
########################################
ENABLE_CRYPTO_NEWS_SCHEDULER=true
NEWS_SCHEDULE_CRON=0 10 * * *
